# PostgreSQL connection (required)
DATABASE_URL=postgres://user:password@localhost:5432/near_email

# API server port
API_PORT=8080

# Domain for email addresses
EMAIL_DOMAIN=near.email

# Account suffix (.near for mainnet, .testnet for testnet)
DEFAULT_ACCOUNT_SUFFIX=.near

# API secret for authenticating requests from WASI and SMTP server
API_SECRET=your-secret-here

# Master public key for internal @near.email delivery (optional)
# When set, emails to @near.email are encrypted and stored directly,
# bypassing SMTP relay. Same key as in smtp-server.
# Generate with: cargo run --bin keygen (in smtp-server directory)
MASTER_PUBLIC_KEY=02...

# SMTP relay configuration (for external emails)
SMTP_RELAY_HOST=smtp.resend.com
SMTP_RELAY_PORT=587
SMTP_RELAY_USER=resend
SMTP_RELAY_PASSWORD=re_xxx

# DKIM signing (optional, for email authentication)
# DKIM_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----
# DKIM_SELECTOR=mail

# FastNEAR API for public key verification
FASTNEAR_API_URL=https://api.fastnear.com

# Poll secret for lightweight /poll/count endpoint
# If not set, random secret generated on startup (tokens invalidated on restart)
# POLL_SECRET=your-poll-secret

# Whether to send notification when invite is used (default: true)
# SEND_INVITE_SUCCESS_EMAIL=true
