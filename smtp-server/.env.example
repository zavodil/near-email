# PostgreSQL connection
DATABASE_URL=postgres://user:password@localhost:5432/near_email

# Master public key (hex-encoded secp256k1 compressed public key)
# Generate with: cargo run --bin keygen
MASTER_PUBLIC_KEY=02...

# SMTP server settings
SMTP_HOST=0.0.0.0
SMTP_PORT=25

# Domain for email addresses
EMAIL_DOMAIN=near.email

# Rate limiting
MAX_EMAILS_PER_MINUTE=100
MAX_EMAIL_SIZE_KB=1024
